{
  "manifest_version": 3,
  "name": "link-copy",
  "version": "1.0",
  "description": "Copy the page title and URL to the clipboard in plain text or Markdown format.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "clipboardWrite",
    "scripting"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png",
    "16": "icons/icon16.png"
  }
}
